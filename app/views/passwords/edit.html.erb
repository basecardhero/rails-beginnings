<div class="w-full">
  <%= form_for @user, url: password_path(params[:token]), method: :put, class: "contents" do |form| %>
    <div class="mb-5">
      <%= form.label :password, "New Password", class: "text-gray-800" %>
      <%= form.password_field :password, required: true, autocomplete: "new-password", maxlength: 72, class: "form-text" %>
      
      <% if @user.errors[:password].any? %>
        <p class="text-red-500 text-sm mt-1">
          <%= @user.errors.full_messages_for(:password).first %>
        </p>
      <% end %>
    </div>

    <div class="mb-5">
      <%= form.label :password_confirmation, "Confirm New Password", class: "text-gray-800" %>
      <%= form.password_field :password_confirmation, required: true, autocomplete: "new-password", maxlength: 72, class: "form-text" %>

      <% if @user.errors[:password_confirmation].any? %>
        <p class="text-red-500 text-sm mt-1">
          <%= @user.errors.full_messages_for(:password_confirmation).first %>
        </p>
      <% end %>
    </div>

    <div class="flex justify-end items-center">
      <%= form.submit "Save New Password", class: "form-button" %>
    </div>
  <% end %>
</div>
